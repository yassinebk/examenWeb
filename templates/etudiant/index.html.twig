{% extends 'base.html.twig' %}

{% block title %}Hello EtudiantController!{% endblock %}

{% block body %}
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Section</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
    {% for etudiant in etudiants %}
        <tr>
            <th scope="row">{{ etudiant.nom }}</th>
            <td>{{ etudiant.prenom }}</td>
            {% if etudiant.section.designation %}
            <td>{{ etudiant.section.designation }}</td>
            {{ else }}
            <td>Etudiant Non affecte a une section</td>
            <td>@mdo</td>
            <td>@mdo</td>
        </tr>
    {% endfor %}
        </tbody>

    </table>
{% endblock %}
